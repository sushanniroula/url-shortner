<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>URL Shortner</title>
</head>
<body>
    <div class="container">
        <h1>URL Shortner</h1>
        <form action="/createShortUrl" method="POST" class="row align-items-center g-2">
            <div class="col">
                <input type="url" class="form-control" name="fullUrl" id="fullUrl" placeholder="Enter Url" required>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <table class="table table-secondary table-bordered">
            <thead>
                <tr>
                    <td>Full Url</td>
                    <td>Short Url</td>
                    <td>Clicks</td>
                </tr>
        </thead>
        <tbody>
            <% allUrls.forEach(allUrl => { %>
                <tr>
                    <td>
                        <a href="<%= allUrl.full %>"><%= allUrl.full %></a>
                    </td>
                    <td>
                        <a href="<%= allUrl.short %>"><%= allUrl.short %></a>
                    </td>
                    <td><%= allUrl.clicks %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>